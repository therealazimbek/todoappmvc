@model ToDoAppModel.ToDoList

@{
    ViewData["Title"] = "Edit";
}

<div class="list-deteails-title">
    <div>
        <div class="back-button">
            <a title="Previous" class="emoji-action" href="javascript:void(0);" onclick="history.go(-1);">&#11013;</a>
        </div>
        <div><h2>Edit list: @Model.Name</h2></div>
    </div>
</div>
<div class="form">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="text"
                   asp-for="Name"
                   placeholder="New name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="checkbox" asp-for="IsHidden" />
            <label for="checkbox">Hidden</label>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
